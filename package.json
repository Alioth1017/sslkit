{
  "name": "sslkit",
  "version": "1.1.0",
  "description": "A powerful CLI tool for converting and managing SSL certificates across different formats (PEM, PFX, CRT, JKS). Perfect for Nginx, Apache, Tomcat, IIS, and more.",
  "main": "dist/library.umd.js",
  "module": "dist/library.es.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sslkit": "dist/cli.js"
  },
  "scripts": {
    "build": "rollup -c && tsup && tsc --emitDeclarationOnly",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish --any-branch",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cd tests/unit && chmod +x run-tests.sh && ./run-tests.sh",
    "test:integration": "cd tests && chmod +x test-all.sh && ./test-all.sh",
    "test:pfx": "cd tests/integration && chmod +x test-pfx.sh && ./test-pfx.sh",
    "test:pem": "cd tests/integration && chmod +x test-pem.sh && ./test-pem.sh",
    "test:crt": "cd tests/integration && chmod +x test-crt.sh && ./test-crt.sh",
    "test:jks": "cd tests/integration && chmod +x test-jks.sh && ./test-jks.sh",
    "test:edge": "cd tests/integration && chmod +x test-edge-cases.sh && ./test-edge-cases.sh",
    "test:perf": "cd tests/integration && chmod +x test-performance.sh && ./test-performance.sh",
    "test:gen-certs": "cd tests/fixtures && chmod +x generate-test-certs.sh && ./generate-test-certs.sh"
  },
  "keywords": [
    "ssl",
    "certificate",
    "conversion",
    "pem",
    "pfx",
    "crt",
    "jks",
    "openssl",
    "keystore",
    "nginx",
    "apache",
    "tomcat",
    "iis",
    "certificate-management",
    "ssl-certificate",
    "security",
    "https",
    "tls"
  ],
  "author": "Alioth",
  "license": "ISC",
  "files": [
    "dist/**/*",
    "!dist/**/*.map",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.2",
    "np": "^10.0.7",
    "rollup": "^4.19.2",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  }
}
